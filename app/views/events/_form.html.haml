= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.text_field :title, placeholder: t('.title.placeholder')
    = f.date_select :date, discard_year: true, include_blank: true, use_short_month: true
    = "-"
    = f.time_select :time, include_blank: true, ignore_date: true, minute_step: 15
    = f.submit 'Save', class: 'btn btn-submit pull-right'
