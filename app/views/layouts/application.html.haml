!!!
%html
  %head
    %meta{:content => 'text/html; charset=utf-8', 'http-equiv' => 'Content-type'}
    %meta{:content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}
    %title
      - if @event && @event.title.present?
        = @event.title
        - if @rsvps
          = "(#{@rsvps.in_count})"
        |
      = t('.title')
    %meta{:name => 'description', :content => t('.description')}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %script{:src => "//js.pusher.com/3.0/pusher.min.js"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %link{:rel => 'shortcut icon', :href => image_path('favicon.png')}
    %link{:rel => 'icon', sizes: :any, mask: true, :href => image_path('chip.svg')}
    %meta{:name => 'theme-color', :content => "#7A47C2"}
    %link{:rel => 'apple-touch-icon', sizes: :any, :href => image_path('chip.png')}

    = csrf_meta_tags
  %body
    = render 'layouts/flash'
    = yield
